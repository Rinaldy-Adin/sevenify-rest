{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "lib": ["ES2019", "DOM", "DOM.Iterable"],
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        // "typeRoots": [
        //     "./node_modules/**/*.d.ts",
        //     "./src/common/interfaces",
        // ],
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
